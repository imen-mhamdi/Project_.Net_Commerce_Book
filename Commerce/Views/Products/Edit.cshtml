@model ProductDto
@{
    ViewData["Title"] = "Edit Product";
}


    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5">@ViewData["Title"]</h2>

            <form   method="post" enctype="multipart/form-data">

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Id</label>
                    <div class="col-sm-8">
                        <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
                    </div>
                </div>

                 <div class="row mb-3">
                    <label  class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">author</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand" />
                </div>
            </div>

                <div class="row mb-3">
                    <label for="Category" class="col-sm-4 col-form-label">Category</label>
                    <div class="col-sm-8">
                    <select class="form-control" asp-for="Category">
                          <option value="">Select Category</option>
                    <option value="Science">Science-fiction</option>
                    <option value="Fantaisie">Fantaisie</option>
                    <option value="Romance">Romance</option>
                    <option value="Horreur">Horreur</option>
                    <option value="Historique">Historique</option>
                        </select>
                    </div>
                </div>


                <div class="row form-group">
                    <label for="Price" class="col-sm-4 col-form-label">Price</label>
                    <div class="col-sm-8">
                    <input  class="form-control" asp-for="Price" />
                    </div>
                </div>


                <div class="row form-group">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    </div>
                </div>

            <div class="row form-group">
                <div class="offset-sm-4 col-sm-8">
                    <img src="~/products/@ViewData["ImageFileName"]" width="100" />
                </div>
            </div>


                <div class="row form-group">
                    <label  class="col-sm-4 col-form-label">Image</label>
                    <div class="col-sm-8">
                        <input  class="form-control" asp-for="ImageFile" >
                    </div>
                </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]" />
                </div>
            </div>


                <div class="row mt-4">
                    <div class="col-sm-6 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-6 d-grid">
                        <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
